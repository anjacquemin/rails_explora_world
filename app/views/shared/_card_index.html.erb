
<div id="<%= locals[:category_name] %>">
  <div class="cards my-3">
    <% locals[:category].each do |offer| %>
      <div class="card-category mb-4">
        <img class="pic" src="https://www.visitberlin.de/system/files/styles/visitberlin_teaser_single_visitberlin_mobile_1x/private/image/Berlin_SommerIMG_0677_c_visitBerlin_Foto_Thomas_Kierok_web.jpg?h=1c9b88c9&itok=rTtJ0q51" alt="Grapefruit slice atop a pile of other slices">
        <div class="text">
          <h3 class="title"><%=offer.title%></h3>
          <p><%=offer.description%></p>
        </div>
        <div class="card-text">
          <%= link_to "See more", offer_path(offer) %>
        </div>
      </div>
    <% end %>
  </div>
</div>
